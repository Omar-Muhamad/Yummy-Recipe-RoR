<p style="color: green"><%= notice %></p>

<h1>Public Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
    <%= link_to "Show this recipe", user_recipe_path(@user.user_id, recipe) %>
    </p>
  <% end %>
</div>

<% if current_user %>
  <%= link_to "New recipe", user_recipes_path(:user_id) %>
<% end %>